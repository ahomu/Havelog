.block
  .secondary-navigation
    ul.wat-cf
      li.first==link_to pat(:list), url(:categories, :index)
      li==link_to pat(:new), url(:categories, :new)
      li.active==link_to pat(:edit), url(:categories, :edit, :id => @category.id)
  .content
    h2.title
      =pat(:edit)
      =="&nbsp;"
      =mt(:category)
    .inner
      ==form_for :category, url(:categories, :update, :id => @category.id), :method => :put, :class => :form do |f|
        ==partial "categories/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
